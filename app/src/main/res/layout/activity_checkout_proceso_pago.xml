<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutProcesoPago"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/checkout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Confirmar compra"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="15dp"
            android:src="@drawable/insouv_logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="1dp"
            android:text="Info. de su envio"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="List.Productos"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="17">

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="4"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Dirección"
                android:textColor="#000" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="10"
                android:gravity="left|center"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="San Jose del Alto   >"
                android:textColor="#000"
                android:background="#2D7A6767"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="17">

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:layout_weight="5"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Factutación"
                android:textColor="#000" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Generar factura   >"
                android:background="#2D7A6767"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Producto 1"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="17"

            >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_weight="4"
                android:src="@drawable/regadera_invertida" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="9"
                android:background="#57C5DDDF"
                android:padding="7dp"
                android:layout_gravity="bottom"
                android:text="Un lipstick líquido que luce con mayor intensidad al secarse."
                android:textColor="#000" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginVertical="10dp"
                android:layout_weight="4"
                android:padding="15dp"
                android:text="$362.25"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="14"
            android:layout_marginTop="45dp"
            >
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Total :"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#0F195A"
                android:textStyle="bold"
                android:text="$ 420.20/con iva incluido"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="14"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/google" />

            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="pagar ahora"
                android:layout_weight="10"
                android:background="#495159"
                android:textColor="#F8F2F2"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>