<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/perfil_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Mi Perfil"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="12"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/big_person" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gusmtabo Meza"
                android:textSize="33sp"
                android:textColor="#495159"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gus.tavo@yahoo.com"
                android:textSize="18sp"
                android:textColor="#726E75"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Teléfono"
                    android:textSize="18sp"
                    android:textColor="#495159"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="4422101616"
                    android:textSize="18sp"
                    android:textColor="#726E75"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Dirección"
                    android:textSize="18sp"
                    android:textColor="#495159"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Calle Mentira #777 Col. La Falacia 76148, Querétaro, Querétaro."
                    android:textSize="18sp"
                    android:textColor="#726E75"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historial de compras"
                    android:textSize="26sp"
                    android:textColor="#495159" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:src="@drawable/taza_rara"
                        android:onClick="verProductoDesdeHistorial"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Compraste Taza rara para café"
                        android:textSize="18sp"
                        android:textColor="#948B89"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="$69.00"
                        android:textSize="18sp"
                        android:textColor="#495159"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:src="@drawable/silla_concava"
                        android:onClick="verProductoDesdeHistorial"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Compraste Silla ortopédica Cóncava"
                        android:textSize="18sp"
                        android:textColor="#948B89"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="$189.90"
                        android:textSize="18sp"
                        android:textColor="#495159"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="3"
                        android:src="@drawable/cepillo"
                        android:onClick="verProductoDesdeHistorial"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Compraste Cepillo en forma de L"
                        android:textSize="18sp"
                        android:textColor="#948B89"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="$19.99"
                        android:textSize="18sp"
                        android:textColor="#495159"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>