<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detalle_producto_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Detalle del producto"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_producto_detalle"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/tv_nombre_producto_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre producto"
                android:textColor="@color/is_dark"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/tv_precio_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 00.00"
                android:textSize="28sp"
                android:textColor="@color/is_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IVA incluído"
                android:textSize="16sp"
                android:textColor="#495159"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Stock disponible"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_existencias"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="00 disponibles"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textColor="#495159"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp" >


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="agregar al carrito"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/add_shopping"
                android:backgroundTint="@color/is_primary"
                android:onClick="agregarAlCarritoProductoDetalle"/>

            <Button
                android:id="@+id/btn_anadir_deseos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir a mi lista de deseos"
                android:textColor="@android:color/white"
                android:onClick="agregarAListaDeDeseos"
                android:backgroundTint="@color/is_background"
                android:drawableStart="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del producto"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_descripcion_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#948B89"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Más información"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_informacion_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#948B89"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>