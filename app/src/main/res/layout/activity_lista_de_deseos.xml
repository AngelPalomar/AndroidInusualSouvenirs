<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaDeDeseos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/lista_deseos_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Mi lista de deseos"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Producto 1"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="17"
            >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:src="@drawable/taza_rara" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="109dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="10"
                android:background="#F6F6F6"
                android:padding="10dp"
                android:text="Un lipstick líquido que luce con mayor intensidad al secarse. Hecho con una fórmula cremosa que mantiene los labios hidratados y no los reseca.Súper bonus: tiene un dulce olor a donas. "
                android:textColor="#000"
                android:gravity="left|center"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="109dp"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#B80A0A"
                android:text="X"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:background="#00F47D7D"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="14"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Precio :"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="$ 0.0"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Producto 1"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="17"

            >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_weight="4"
                android:src="@drawable/regadera_invertida" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="109dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="10"
                android:background="#F6F6F6"
                android:padding="10dp"
                android:text="Un lipstick líquido que luce con mayor intensidad al secarse. Hecho con una fórmula cremosa que mantiene los labios hidratados y no los reseca.Súper bonus: tiene un dulce olor a donas. "
                android:textColor="#000"
                android:gravity="left|center"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="109dp"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#B80A0A"
                android:text="X"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:background="#00F47D7D"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="14"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Precio :"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="$ 0.0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="14"

            >
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Ir a la tienda"
                android:layout_marginVertical="35dp"
                android:layout_weight="6"
                android:layout_marginHorizontal="15dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#99B2DD"
                android:onClick="volverTienda"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Agregar al carrito"
                android:layout_marginVertical="35dp"
                android:backgroundTint="#99B2DD"
                android:textColor="@android:color/white"
                android:layout_weight="6"
                android:onClick="agregarDeseosCarrito"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>